<Window x:Class="CalculatorPers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorPers"
        mc:Ignorable="d"
        Title="Calculator Personal" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Display" Grid.Row="0" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Right" IsReadOnly="True" Margin="10" Padding="10"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ButtonMC" Content="MC" Grid.Row="0" Grid.Column="0" Click="Button_Click"/>
            <Button x:Name="ButtonMR" Content="MR" Grid.Row="0" Grid.Column="1" Click="Button_Click"/>
            <Button x:Name="ButtonMPlus" Content="M+" Grid.Row="0" Grid.Column="2" Click="Button_Click"/>
            <Button x:Name="ButtonMMinus" Content="M-" Grid.Row="0" Grid.Column="3" Click="Button_Click"/>

            <Button x:Name="ButtonPercent" Content="%" Grid.Row="1" Grid.Column="0" Click="Button_Click"/>
            <Button x:Name="ButtonCE" Content="CE" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
            <Button x:Name="ButtonC" Content="C" Grid.Row="1" Grid.Column="2" Click="Button_Click"/>
            <Button x:Name="ButtonBackspace" Content="_" Grid.Row="1" Grid.Column="3" Click="Button_Click"/>

            <Button x:Name="ButtonReciprocal" Content="1/x" Grid.Row="2" Grid.Column="0" Click="Button_Click"/>
            <Button x:Name="ButtonSquare" Content="x²" Grid.Row="2" Grid.Column="1" Click="Button_Click"/>
            <Button x:Name="ButtonSQRT" Content="√x" Grid.Row="2" Grid.Column="2" Click="Button_Click"/>
            <Button x:Name="ButtonDivide" Content="/" Grid.Row="2" Grid.Column="3" Click="Button_Click"/>

            <Button x:Name="Button7" Content="7" Grid.Row="3" Grid.Column="0" Click="Button_Click"/>
            <Button x:Name="Button8" Content="8" Grid.Row="3" Grid.Column="1" Click="Button_Click"/>
            <Button x:Name="Button9" Content="9" Grid.Row="3" Grid.Column="2" Click="Button_Click"/>
            <Button x:Name="ButtonMultiply" Content="*" Grid.Row="3" Grid.Column="3" Click="Button_Click"/>

            <Button x:Name="Button4" Content="4" Grid.Row="4" Grid.Column="0" Click="Button_Click"/>
            <Button x:Name="Button5" Content="5" Grid.Row="4" Grid.Column="1" Click="Button_Click"/>
            <Button x:Name="Button6" Content="6" Grid.Row="4" Grid.Column="2" Click="Button_Click"/>
            <Button x:Name="ButtonMinus" Content="-" Grid.Row="4" Grid.Column="3" Click="Button_Click"/>

            <Button x:Name="Button1" Content="1" Grid.Row="5" Grid.Column="0" Click="Button_Click"/>
            <Button x:Name="Button2" Content="2" Grid.Row="5" Grid.Column="1" Click="Button_Click"/>
            <Button x:Name="Button3" Content="3" Grid.Row="5" Grid.Column="2" Click="Button_Click"/>
            <Button x:Name="ButtonPlus" Content="+" Grid.Row="5" Grid.Column="3" Click="Button_Click"/>

            <Button x:Name="ButtonSign" Content="+/-" Grid.Row="6" Grid.Column="0" Click="Button_Click"/>
            <Button x:Name="Button0" Content="0" Grid.Row="6" Grid.Column="1" Click="Button_Click"/>
            <Button x:Name="ButtonDot" Content="." Grid.Row="6" Grid.Column="2" Click="Button_Click"/>
            <Button x:Name="ButtonEqual" Content="=" Grid.Row="6" Grid.Column="3" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
